<style>
  .date {
    white-space: nowrap;
  }
  .name {
    font-weight: bold;
  }
  .text {
    padding: 2px;
  }
  h3 {
      margin-bottom: 0px;
  }
  .margined {
      margin-left: 5px;
  }
</style>

<div class="page">
    <!-- TODO <div style="border: 1px solid #A0A0A0; padding: 5px; width: 100px; min-height: 75px; float:right;">
        <img id="photo" style="max-width: 100px; display: block; margin-left: auto; margin-right: auto"/>
    </div>-->
    {{#if select}}
    <div><button id="select_source" class="btn btn-primary btn-large"><i class="icon-ok icon-white"></i> Select Source</button></div>
    {{/if}}
    <h3>{{source.name}}</h3>
    <div class="margined">
        <div style="color: Gray">
            {{source.desc}}
        </div>
        <div>
            <b>ID:</b> {{source.code}}
        </div>
        <div>
            <b>Type:</b> <span id="source_type"></span>
        </div>
        {{#if source.private}}
        <div class="text-warning">Private</div>
        {{/if}}
        <button id="edit_source_button" class="btn"><i class="icon-edit"></i> Edit Source</button>
        {{#if source.custom}}
        <br/><br/>
        <div class="well well-small">
          {{#eachProperty source.custom}}
            <div><span class="muted">{{key}}</span>: {{value}}</div>
          {{/eachProperty}}
        </div>
        {{/if}}
    </div>
    <div class="row">
        <div class="col-md-12">
            <h4>Location</h4>
            <div id="location"></div>

            <button id="add_test_button" class="btn pull-right margined"><i class="icon-plus-sign"></i> Add</button>
            <h4 class="buttoned">Water Tests</h4>
            <table id="tests" class="table"></table>

            <button id="add_note_button" class="btn pull-right margined"><i class="icon-plus-sign"></i> Add</button>
            <h4 class="buttoned">Notes</h4>
            <table id="notes" class="table"></table>
        </div>
    </div>
    <div class="row">
      <h4>Photos</h4>
      <div id="photos"></div>
    </div>
</div>